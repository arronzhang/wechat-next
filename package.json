{
  "name": "wechat-next",
  "version": "0.2.0",
  "description": "Wechat api",
  "main": "index.js",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "scripts": {
    "eslint": "eslint *.js --format codeframe \"{lib,test}/**/*.{js,ts}\"",
    "sish": "ssh -R wechat-test:80:localhost:3000 ssi.sh",
    "prettier": "prettier --write *.js \"{lib,test}/**/*.{js,ts}\"",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test-travis": "npm run eslint && jest --coverage --collectCoverageFrom=lib/**/*.js",
    "test": "npm run eslint && jest"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.16.0",
    "body-parser": "^1.18.3",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "express": "^4.16.4",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "koa": "^2.7.0",
    "koa-body": "^4.1.0",
    "koa-bodyparser": "^4.2.1",
    "koa-xml-body": "^2.1.0",
    "prettier": "^1.16.4",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "axios": "^0.19.0-beta.1",
    "form-data": "^2.3.3",
    "json-bigint": "^0.3.0",
    "xml-js": "^1.6.11"
  }
}
